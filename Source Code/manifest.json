{
	"manifest_version": 2,
	"minimum_chrome_version": "20",
	"name": "Qzone Clear",
	"homepage_url": "https://github.com/idiotWu/Qzone-Clear",
	"version": "0.1.1",
	"description": "Qzone 屏蔽好友动态加强版：输入好友QQ号即可屏蔽 *其动态* 及 *其在其它好友动态下的评论*。Made by Dolphin.",
	"icons": {
		"128": "icon/icon_128.png"
	},
	"background": { "scripts": ["js/jquery-2.0.0.min.js", "js/background.js"] },
	"page_action": {
		"default_icon": {
			"19": "icon/icon_19.png",
			"38": "icon/icon_38.png"
		},
		"default_title": "Qzone Clear",
		"default_popup": "popup.html"
	},
	"permissions" : ["storage","tabs","http://user.qzone.qq.com/*"],
	"content_scripts":[{
		"matches":["http://user.qzone.qq.com/*"],
		"js":["js/jquery-2.0.0.min.js", "js/content_script.js"]
	}]
}
